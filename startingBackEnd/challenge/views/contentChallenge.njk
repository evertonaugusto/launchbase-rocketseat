{% extends "layout.njk" %}
{% block head %}

<title>Cursos</title>
<link
      href="https://fonts.googleapis.com/icon?family=Material+Icons"
      rel="stylesheet"
    />


{% endblock %}
 {% block content %}

<div id="wrapper">
  <h1>Cursos</h1>
</div>

<section class="cards">
{% for item in items %}
  <div class="card" id="{{item.id}}">
    <div class="card_img">
      <img
        src="{{item.img}}"
        alt="Imagem {{item.img}}"
      />
    </div>
    <div class="card_content">
      <p>
        {{item.description}}
      </p>
    </div>
    <div class="card_info">
      <p>{{item.modules}}</p>
      <p class="card_price">{{item.price}}</p>
    </div>
  </div>

  {% endfor %}

  
</section>

<div class="modal_overlay">
  <div class="modal">
    <a class="close_modal">
      <i class="material-icons">close</i>
    </a>
    <div class="modal_content">
      <iframe src=""> </iframe>
    </div>
  </div>
</div>

<script src="scripts.js"></script>

{% endblock %}
